<body>
  <div class="screen-overlay"></div>



  <section class="content-main">
    <div class="content-header">
      <div>
        <h2 class="content-title card-title">Coupon..</h2>

      </div>
      <div>


        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addCoupon"><i
            class="text-muted material-icons md-post_add"></i> Create New Coupon
        </button>


      </div>

    </div>
    <div class="card mb-4">

      <div class="card-body">
        <div class="table-responsive">
          <table id="example" class="table table-hover">
            <thead>
              <tr>
                <td>No.</td>
                <th>Coupon Code</th>
                <th>Expairy Date</th>
                <th>Max Amount</th>
                <th>Min Amount</th>
                <th>Percentage</th>

                <th class="text-end">Action</th>
              </tr>
            </thead>
            <tbody>
              {{#each coupons }}
              <tr>
                <td></td>
                <td>{{this.couponCode}}</td>
                <td><b>{{this.expairyDate}}</b></td>
                <td>{{this.maxAmount}}</td>
                <td>{{this.minAmount}}</td>
                <td>{{this.discount}}</td>
                <td class="text-end">
                  <a href="/admin/deleteCoupon/{{this._id}}" class="btn btn-md rounded  font-sm"><i class="material-icons md-delete_forever"></i>Delete</a>


        </div> <!-- dropdown //end -->
        </td>
        </tr>
        {{/each}}
        </tbody>
        </table>
      </div> <!-- table-responsive//end -->
    </div>
    <!-- card-body end// -->
