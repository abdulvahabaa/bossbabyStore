  </section> <!-- content-main end// -->

  {{!-- add coupon modal --}}
  <div class="modal fade" id="addCoupon" tabindex="-1" aria-labelledby="addAddressLabel" aria-hidden="true">

    <div class="modal-dialog">
      <div class="modal-content">

        <form action="/admin/addCoupon" method="post" id="addcheckout-form">
          <div class="modal-header">
            <h3 class="modal-title fs-5" id="addAddressLabel">Enter Coupon Details </h3>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body ml-5">


            <div class="row">
              <div class="col-lg-12">
                <h2 class="checkout-title"></h2><!-- End .checkout-title -->

                <div class="">
                  <label>Coupon Code</label>
                  <input type="text" name="couponCode" class="form-control" required>
                </div><!-- End .col-sm-6 -->

                <div class="">
                  <label>Expairy Date</label>
                  <input type="date" name="expairyDate" class="form-control" required>
                </div><!-- End .col-sm-6 -->

                <div class="">
                  <label>Max Amount</label>
                  <input type="text" name="maxAmount" class="form-control" required>
                </div><!-- End .col-sm-6 -->

                <div class="">
                  <label>Min Amount </label>
                  <input type="text" name="minAmount" class="form-control" required>
                </div><!-- End .col-sm-6 -->

                <div class="">
                  <label>Discount Percentage</label>
                  <input type="text" name="discount" class="form-control" required>
                </div><!-- End .col-sm-6 -->


              </div><!-- End .row -->

            </div>
          </div>

          <div class="modal-footer mt-2">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Add Coupon</button>
          </div>
        </form>
      </div>

    </div>

  </div>




</body>
<script>
  var table = document.getElementsByTagName('table')[0],
    rows = table.getElementsByTagName('tr'),
    text = 'textContent' in document ? 'textContent' : 'innerText';

  for (var i = 1, len = rows.length; i < len; i++) {
    rows[i].children[0][text] = i + ' ' + rows[i].children[0][text];
  }
</script>