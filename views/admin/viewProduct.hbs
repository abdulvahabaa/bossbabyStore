{{>adminSidebar}}
{{>adminHeader}}


<section class="content-main">

    <div class="content-header">

        <div>
            <h2 class="content-title card-title">Products List</h2>
            <p>Add, edit or delete a Product.</p>
        </div>
        <div>

            <a href="/admin/addProductPage" class="btn btn-primary btn-sm rounded">Create new</a>
        </div>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="bg-info">
                    <tr>
                        <th>img</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">brand</th>
                        <th scope="col">stock</th>
                        <th scope="col">Category</th>
                        <th scope="col">Discount</th>
                        <th scope="col" class="text-center"> Action </th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                        <td> <img style="width: 50px;" src="/images/product-images/{{this.img.[0]}}" alt="Item"></td>
                        <td><b>{{this.name}}</b></td>
                        <td>â‚¹{{this.price}}</td>
                        <td>{{this.brand}}</td>
                        <td><span class="badge rounded-pill alert-warning">{{this.stock}}</span></td>
                        <td>{{this.categoryDetails.category}}</td>
                        <td>{{this.discount}}%</td>

                        <td class="text-end">
                            <a href="/admin/editproduct/{{this._id}}" class="btn btn-sm font-sm rounded btn-brand"> <i
                                    class="material-icons md-edit"></i>Edit</a>

                            <a href="/admin/deleteProduct/{{this._id}}" class="btn btn-sm font-sm btn-light rounded"
                                onclick="return confirm('are you want to delete {{this.name}}')"> <i
                                    class="material-icons md-delete_forever"></i>Delete</a>
                        </td>
                    </tr>

                    {{/each}}


                </tbody>
            </table>
        </div> <!-- table-responsive //end -->
    </div> <!-- card-body end// -->
    </div> <!-- card end// -->
    </body>